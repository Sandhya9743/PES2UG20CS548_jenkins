pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'g++ -o PES2UG20CS548-1 try.cpp'
                echo "Build successful"
            }
        }
        stage('Test') {
            steps {
                sh './PES2UG20CS548-1'
            }
        }
     }
      
    post {
        always {
              echo "pipeline completed"
              }      
         failure {
               echo 'pipeline failed'
              }
       }
  }
